<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Melodiam" parent="@style/Theme.AppCompat.DayNight">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_200</item>
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/appActionBarTheme</item>
        <item name="actionBarStyle">@style/appActionBarTheme</item>
    </style>
    <!-- Action Bar Theme. -->
    <style name="appActionBarTheme" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/white</item>
        <item name="android:actionOverflowButtonStyle">@color/purple_200</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:textColor">@color/purple_200</item>
        <item name="android:textColorHint">@color/purple_200</item>

    </style>
</resources>